{
  "manifest_version": 3,
  "name": "CodeDrona",
  "version": "1.0",
  "description": "CodeDrona is your AI-powered DSA mentor that guides you step-by-step without giving full answers.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.geeksforgeeks.org/*",
    "*://*.hackerrank.com/*",
    "https://openrouter.ai/*"
  ],
  "content_scripts": [
  {
    "matches": [
      "https://leetcode.com/problems/*",
      "https://www.geeksforgeeks.org/*",
      "https://www.hackerrank.com/*"
    ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]
}
